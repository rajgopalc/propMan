<html ng-app="myApp">
    <head> 
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title> Configuration Editor </title>
        <script src='js/lib/angular/angular.js'></script>
        <script src='js/app.js'></script>
        <script src='js/services.js'></script>
        <script src='js/controllers.js'></script>
        <script src='js/filters.js'></script>
        <script src='js/directives.js'></script>
        <link rel="stylesheet" href="css/pure-min.css"/>
        <link rel="stylesheet" href="css/style.css"/>
    </head>

    <body ng-controller="ShowPropertyCntrl">
        <h2 align="center">Configuration File Editor</h2>
        <label class="label"> Below are the configuration files found :</label>
        <div class={{editorStatus}}>
            <table>
                <tr ng-repeat = "configFiles in configFilesArray">
                   <td width="75%"> {{configFiles.File}} </td>
                   <td width="25%"> <button class="button-small pure-button" ng-click="readFile(configFiles.Id)">Click to Edit</button> </td>
                </tr>
            </table>
         </div>
        <br>
        <hr>
        <div ng-show="divShow">
            <label class="label"> Editor for changing the configuration file :</label>
           <textarea ng-model="FileContent" style="width:100%; height:250px;"> {{FileContent}} </textarea>
           <div align="center" ><button class="button-small pure-button pure-button-primary" ng-click="commitChanges()">Write Changes</button></div>
        </div>
    
    </body>
</html>
